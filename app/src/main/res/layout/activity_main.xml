<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp"
    tools:context=".MainActivity"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/rutaBttn"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/boton1" />

    <Button
        android:id="@+id/ediBttn"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/rutaBttn"
        android:layout_below="@+id/rutaBttn"
        android:layout_marginTop="10dp"
        android:background="@drawable/boton2" />

    <Button
        android:id="@+id/mapaBttn"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/ediBttn"
        android:layout_below="@+id/ediBttn"
        android:layout_marginTop="10dp"
        android:background="@drawable/boton3" />

    <Button
        android:id="@+id/infoBttn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/rutaBttn"
        android:layout_alignParentTop="true"
        android:background="@drawable/info" />



</RelativeLayout>
